{
  "index_patterns": "dms_device",
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "0"
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "name": {
          "type": "keyword"
        },
        "location": {
          "type": "text"
        },
        "host": {
          "type": "keyword"
        },
        "type": {
          "type": "keyword"
        },
        "token": {
          "type": "keyword"
        },
        "lastActivity": {
          "type": "date",
          "format": "strict_date_time_no_millis"
        }
      }
    }
  }
}